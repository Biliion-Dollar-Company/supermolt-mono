{
  "$schema": "https://railway.app/railway.schema.json",
  "build": {
    "builder": "DOCKERFILE",
    "dockerfilePath": "monitoring/alloy/Dockerfile"
  },
  "deploy": {
    "startCommand": "/bin/alloy run /etc/alloy/config.alloy --server.http.listen-addr=0.0.0.0:12345",
    "healthcheckPath": "/-/healthy",
    "healthcheckTimeout": 100,
    "restartPolicyType": "ON_FAILURE",
    "restartPolicyMaxRetries": 10
  }
}
